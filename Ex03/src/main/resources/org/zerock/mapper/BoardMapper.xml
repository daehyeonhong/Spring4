<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.BoardMapper">

	<select id="getList" resultType="org.zerock.domain.BoardDTO">
		<![CDATA[
			SELECT*FROM table_board WHERE bno>0
		]]>
	</select>

	<insert id="insert">
		<![CDATA[
			INSERT INTO table_board(bno,title,content,writer)VALUES(seq_board.NEXTVAL,#{title},#{content},#{writer})
		]]>
	</insert>

	<insert id="insertSelectKey">
		<selectKey keyProperty="bno" order="BEFORE" resultType="long">
			<![CDATA[
				SELECT seq_board.NEXTVAL from dual
			]]>
		</selectKey>

		<![CDATA[
			INSERT INTO table_board(bno,title,content,writer)VALUES(#{bno},#{title},#{content},#{writer})
		]]>
	</insert>

	<select id="read" parameterType="long" resultType="org.zerock.domain.BoardDTO">
		<![CDATA[
			SELECT*FROM table_board WHERE bno=#{bno}
		]]>
	</select>

	<delete id="delete">
		<![CDATA[
			DELETE FROM table_board WHERE BNO=#{bno}
		]]>
	</delete>
	
	<update id="update">
		<![CDATA[
			UPDATE table_board
				SET title=#{title},
						content=#{content},
						writer=#{writer},
						updateDate=SYSDATE
				WHERE bno=#{bno}
		]]>
	</update>

</mapper>